---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { SITE } from "../../config";

const posts = await getCollection("posts");
const sortedPosts = posts.sort(
  (a, b) =>
    new Date(b.data.pubDatetime).valueOf() -
    new Date(a.data.pubDatetime).valueOf()
);

const latestPost = sortedPosts[0];
const otherPosts = sortedPosts.slice(1);

const totalPosts = sortedPosts.length;
const oldestPost = sortedPosts[sortedPosts.length - 1];
const newestPost = sortedPosts[0];
const startYear = oldestPost
  ? new Date(oldestPost.data.pubDatetime).getFullYear()
  : new Date().getFullYear();
const endYear = newestPost
  ? new Date(newestPost.data.pubDatetime).getFullYear()
  : new Date().getFullYear();
const yearRange = startYear === endYear ? `${startYear}` : `${startYear}–${endYear}`;
---

<Layout title="Journal">
  <div class="max-w-4xl mx-auto px-6 py-20 min-h-screen">
    <!-- Header -->
    <header class="mb-16 pt-10 pb-12 border-b border-border transition-colors">
      <div class="md:grid md:grid-cols-[1fr_auto] md:items-start md:gap-10">
        <!-- Left: title + subtitle -->
        <div class="max-w-2xl">
          <h1 class="text-4xl md:text-5xl font-serif font-bold tracking-tight text-foreground">
            Journal
          </h1>

          <div class="mt-6 flex items-start gap-4">
            <div class="mt-2 h-px w-10 bg-border" aria-hidden="true"></div>
            <p class="text-muted-foreground text-sm font-serif leading-relaxed">
              Notes, failures, and small wins. A living archive.
            </p>
          </div>
        </div>

        <!-- Right: meta -->
        <div class="mt-6 md:mt-1 text-left md:text-right md:border-l md:border-border/60 md:pl-8">
          <p class="text-sm font-serif text-foreground/70 leading-none">
            Derek Mayor
          </p>
          <p class="mt-2 text-[11px] font-mono tracking-[0.14em] text-foreground/55">
            <span class="uppercase">{totalPosts} entries</span>
            <span class="mx-2 text-foreground/35 md:hidden" aria-hidden="true">·</span>
            <span class="block md:mt-1">{yearRange}</span>
          </p>
        </div>
      </div>
    </header>

    <!-- Latest Entry (Hero) -->
    {latestPost && (
      <div class="mb-12 group relative">
        <div class="absolute -left-[45px] top-2.5 w-1.5 h-1.5 rounded-full bg-primary animate-pulse"></div>
        <span class="inline-block px-2 py-0.5 mb-3 text-[10px] font-mono text-primary border border-primary/20 rounded bg-primary/5 transition-colors uppercase tracking-wider">Latest</span>

        <a href={`${SITE.base}/posts/${latestPost.id}`} class="block relative border-l border-border ml-2 pl-10 -ml-2 -pl-10">
          <h2 class="text-3xl font-serif font-semibold text-foreground mb-3 leading-tight hover:text-muted-foreground transition-colors">{latestPost.data.title}</h2>
          <p class="text-sm font-mono text-muted-foreground leading-relaxed max-w-2xl group-hover:text-foreground transition-all">{latestPost.data.description}</p>

          <div class="mt-4 flex items-center gap-3 text-xs font-mono text-muted-foreground">
            <span>{new Date(latestPost.data.pubDatetime).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</span>
          </div>
        </a>
      </div>
    )}

    <!-- Timeline List -->
    <div class="space-y-12 relative transition-colors">
      {otherPosts.map((post) => (
        <div class="relative group">
          <!-- Timeline Dot (Subtle) -->
          <div class="absolute -left-[35px] top-2 w-1.5 h-1.5 rounded-full bg-border group-hover:bg-foreground transition-colors"></div>

          <a href={`${SITE.base}/posts/${post.id}`} class="block">
            <span class="text-[10px] font-mono text-muted-foreground mb-2 block uppercase tracking-wider">{new Date(post.data.pubDatetime).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}</span>
            <h3 class="text-2xl font-serif font-semibold text-foreground mb-2 group-hover:text-muted-foreground transition-colors">{post.data.title}</h3>
            <p class="text-muted-foreground font-mono text-xs leading-relaxed line-clamp-2 max-w-xl group-hover:text-foreground transition-colors">{post.data.description}</p>
          </a>
        </div>
      ))}
    </div>
  </div>
</Layout>
